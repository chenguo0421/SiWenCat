<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_color_f2f2f2">



    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/iv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textColor="@color/common_red"
            android:layout_marginTop="@dimen/common_dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_original"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:paddingStart="@dimen/common_dp_20"
            android:paddingEnd="@dimen/common_dp_20"
            android:paddingTop="@dimen/common_dp_5"
            android:paddingBottom="@dimen/common_dp_5"
            android:background="@drawable/common_circle_half_border_left_red"
            />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/iv_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的原创"
            android:textColor="@color/common_white"
            app:layout_constraintTop_toTopOf="@+id/iv_collect"
            app:layout_constraintBottom_toBottomOf="@+id/iv_collect"
            app:layout_constraintStart_toEndOf="@+id/iv_collect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:paddingStart="@dimen/common_dp_20"
            android:paddingEnd="@dimen/common_dp_20"
            android:paddingTop="@dimen/common_dp_5"
            android:paddingBottom="@dimen/common_dp_5"
            android:background="@drawable/common_circle_half_right_red"
            />

</androidx.constraintlayout.widget.ConstraintLayout>