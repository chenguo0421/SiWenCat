<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_audio"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/iv_audio"
            app:layout_constraintBottom_toBottomOf="@+id/iv_audio"
            android:layout_marginStart="@dimen/common_dp_6"
            android:layout_marginBottom="@dimen/common_dp_6"
            android:src="@mipmap/sw_home_icon_yinpinzanting"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_readCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white"
            android:textSize="@dimen/common_sp_9"
            app:layout_constraintTop_toTopOf="@+id/iv_play"
            app:layout_constraintBottom_toBottomOf="@+id/iv_play"
            app:layout_constraintLeft_toRightOf="@+id/iv_play"
            android:layout_marginStart="@dimen/common_dp_6"
            />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/iv_audio"
            app:layout_constraintRight_toRightOf="@+id/iv_audio"
            app:layout_constraintTop_toBottomOf="@+id/iv_audio"
            android:gravity="start"
            android:textSize="@dimen/common_sp_12"
            android:textColor="@color/common_text_color_333333"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_dis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintRight_toRightOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:textSize="@dimen/common_sp_10"
            android:textColor="@color/common_text_color_666666"
            android:gravity="start"
            android:lineSpacingMultiplier="1.4"
            android:letterSpacing="0.1"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            />




</androidx.constraintlayout.widget.ConstraintLayout>